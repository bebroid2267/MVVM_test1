<UserControl x:Class="MVVM_test1.View.AllSoft"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_test1.View" xmlns:viewmodel="clr-namespace:MVVM_test1.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:AllSoftVM}"
             xmlns:view="clr-namespace:MVVM_test1.View" 
             mc:Ignorable="d" 
             Height="1550" 
             Width="1220"
             Background="Transparent">

    <UserControl.DataContext>
        <viewmodel:AllSoftVM />
        
    </UserControl.DataContext>

    <ScrollViewer>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="140" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <view:SwitcherMenu Grid.Row="0"
                               VerticalAlignment="Top"
                               Grid.Column="0"
                               Panel.ZIndex="1"
                               Grid.ColumnSpan="5" 
                               Margin="0,0,0,1000" 
                               Grid.RowSpan="2"/>

            <Border Background="#CDD6D0"
                    Grid.Column="0"
                    Grid.Row="0"
                    CornerRadius="25" 
                    Grid.RowSpan="2" 
                    Grid.ColumnSpan="4" 
                    Margin="0,0,0,715"/>



            <TextBlock Grid.Row="1"
                       Grid.ColumnSpan="1"
                       Margin="40,-500,100,100"
                       Text="Весь софт"
                       Foreground="#46494C"
                       FontFamily="Ramona Bold"
                       FontSize="55"
                       Panel.ZIndex="1"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left" 
                       Grid.Column="1"
                       Grid.RowSpan="3"/>

            <Grid Height="619" 
                  VerticalAlignment="Top" 
                  HorizontalAlignment="Center" 
                  Width="1180" 
                  Grid.Column="1" 
                  Grid.ColumnSpan="2"
                  Margin="0,206,0,0">


                <ScrollViewer Margin="0,-68,10,0">
                    <ListBox ItemsSource="{Binding _Apps}" 
                             Margin="190,-20,159,0"
                             Panel.ZIndex="1"
                             d:ItemsSource="{d:SampleData ItemCount=5}" 
                             Width="832" 
                             Height="487" >


                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>



                                    <Border Background="#46494C"
                                            Height="50"
                                            Width="70"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            CornerRadius="15"
                                            Opacity="0.3"
                                            Margin ="28,0,0,0"/>

                                    <Border CornerRadius="100" 
                                            HorizontalAlignment="Left"
                                            Margin="43 0 0 0"
                                            BorderThickness="1">
                                        <Image Source="{Binding IcoPath}" 
                                               Margin="4,5,8,5" 
                                               RenderTransformOrigin="0.319,0.224" />
                                    </Border>
                                    
                                    
                                    <TextBlock Text="{Binding NameProcess}" 
                                                   FontWeight="DemiBold"
                                                   Margin="143,0,-400,1"
                                                   Foreground="#46494C"
                                                   FontSize="23" />
                                    
                                    <TextBlock Text="{Binding SumTimeProcess}"
                                               FontSize="18"
                                               FontWeight="Light"
                                               Foreground="#46494C"
                                               VerticalAlignment="Top"
                                               Margin="143,30,-129,0"/>

                                    <Button Content="INFO" 
                                            Width="60"
                                            Margin="400,11,0,11"
                                            Command="{Binding DataContext.ShowMiniPageApp, 
                                            RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource headerbtn}"/>
                                    
                                    <TextBlock Text="{Binding GlobalStartTime}"
                                               FontSize="18"
                                               FontWeight="Light"
                                               Foreground="#46494C" 
                                               VerticalAlignment="Center"
                                               Margin="640,0,-690,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

            </Grid>

        </Grid>
    </ScrollViewer>
</UserControl>
